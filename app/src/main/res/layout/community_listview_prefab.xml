<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/community_img"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/community_room_title"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:text="대화방 이름"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="@+id/community_img"
        app:layout_constraintLeft_toRightOf="@+id/community_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/community_last_msg"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="최근 메세지"
        app:layout_constraintTop_toBottomOf="@+id/community_room_title"
        app:layout_constraintBottom_toBottomOf="@+id/community_img"
        app:layout_constraintLeft_toRightOf="@+id/community_img"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/community_last_time"
        android:text="13:45"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/community_img"/>

</android.support.constraint.ConstraintLayout>